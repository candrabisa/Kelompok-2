<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/imgUser_search"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_child_care_black_24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNIM_Search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NIM Kamu"
                        android:textStyle="bold"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvNama_Search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_anda"
                        android:textColor="#000000"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tvOrganisasi_Search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anggota Organisasi"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar_search"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>
</androidx.cardview.widget.CardView>